<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <title>LocadoRafa | Usu√°rios</title>
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-dark ml-auto ml-md-0">
          <a class="navbar-brand" href="/"><img class="img-responsive" src="/images/logo.png" width="50" height="ml-auto" alt="" /></a>
        </nav>
      </header>
  
    <%- include('./partials/sidebar-adm') %>

    <main class="page-content">
    <div class="container-fluid">

    <table class="table">
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Nome</th>
            <th scope="col">Email</th>

        </tr>
        <% result.forEach((item) => { %>
        
        <tr>
            <td><%= item.id %></td>
            <td><%= item.nome %></td>
            <td><%= item.email %></td>
            <td>
                <form action="/users/deletar/<%= item.id %>?_method=DELETE" method="POST">
                    <a type="button" class="btn btn-primary" href="/users/<%= item.id %>">Editar</a>
                    <button type="submit" class="btn btn-danger">Deletar</button>
                </form>
            </td>
        </tr>
    <% }) %>

    </table>
</div>
</main>

    <%- include('./partials/footer') %>

    <script src="/javascripts/jquery.min.js"></script>
    <script src="/javascripts/scriptUser.js"></script>
    <script src="/javascripts/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/b5ed3fff72.js" crossorigin="anonymous"></script>
</body>
</html>